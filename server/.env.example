# =============================================================================
# KISAN SAATHI - SERVER ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
# Port number for the Express server
PORT=5001

# Node environment (development, production, test)
NODE_ENV=development

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# MongoDB connection string
# Format: mongodb://username:password@host:port/database
# Example: mongodb://localhost:27017/kisan_saathi
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/kisan_saathi
MONGO_URI=mongodb://localhost:27017/kisan_saathi

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
# JWT Secret Key - MUST be changed in production!
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------
# Allowed client origins (comma-separated for multiple origins)
# Development: http://localhost:5173
# Production: https://yourdomain.com,https://www.yourdomain.com
CLIENT_ORIGIN=http://localhost:5173

# Client URL for WebSocket connections
CLIENT_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# AI SERVICE CONFIGURATION
# -----------------------------------------------------------------------------
# AI Provider: 'openai' or 'gemini'
AI_PROVIDER=gemini

# OpenAI API Key (required if AI_PROVIDER=openai)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini API Key (required if AI_PROVIDER=gemini)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini Model to use (gemini-pro, gemini-1.5-pro, gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash

# -----------------------------------------------------------------------------
# EXTERNAL API CONFIGURATION
# -----------------------------------------------------------------------------
# Market Data API (Agmarknet or custom)
MARKET_API_URL=https://api.data.gov.in/resource/9ef84268-d588-465a-a308-a864a43d0070
MARKET_API_KEY=your-market-api-key-here

# Alternative names for backward compatibility
AGMARK_API_URL=
AGMARK_API_KEY=

# -----------------------------------------------------------------------------
# OPTIONAL SERVICES
# -----------------------------------------------------------------------------
# Weather API (if using external weather service)
# WEATHER_API_KEY=your-weather-api-key-here
# WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Government Schemes API
# MYSCHEME_API_URL=https://api.myscheme.gov.in/schemes
# MYSCHEME_API_KEY=your-myscheme-api-key-here

# -----------------------------------------------------------------------------
# LOGGING & MONITORING
# -----------------------------------------------------------------------------
# Log level (error, warn, info, debug)
# LOG_LEVEL=info

# Enable request logging
# ENABLE_MORGAN=true

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
# Rate limit window in milliseconds (default: 60000 = 1 minute)
# RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window (default: 120)
# RATE_LIMIT_MAX_REQUESTS=120

# -----------------------------------------------------------------------------
# NOTES
# -----------------------------------------------------------------------------
# 1. Required variables: MONGO_URI, JWT_SECRET, AI_PROVIDER, and corresponding AI key
# 2. Generate secure JWT_SECRET: openssl rand -base64 32
# 3. For production, set NODE_ENV=production and use HTTPS URLs
# 4. Keep this file updated when adding new environment variables