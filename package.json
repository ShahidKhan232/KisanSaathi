{
  "name": "kisan-sathi-root",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=@kisan-sathi/frontend\" \"npm run dev --workspace=kisan-sathi-server\"",
    "dev:frontend": "npm run dev --workspace=@kisan-sathi/frontend",
    "dev:backend": "npm run dev --workspace=kisan-sathi-server",
    "build": "npm run build --workspaces",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}